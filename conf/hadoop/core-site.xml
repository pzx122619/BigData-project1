    <value>*</value> <!-- lub konkretne hosty, z których dozwolona jest impersonacja -->
  </property>

  <property>
    <name>hadoop.proxyuser.hadoop.groups</name>
    <value>*</value> <!-- lub konkretne grupy użytkowników -->
  </property>

</configuration>

